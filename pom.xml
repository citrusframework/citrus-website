    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <finalName>schemas</finalName>
          <appendAssemblyId>false</appendAssemblyId>
          <descriptors>
