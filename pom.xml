          </descriptors>
          <attach>false</attach>
        </configuration>
        <executions>
          <execution>
            <id>citrus-schemas</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <watchInterval>500</watchInterval>
          <logDate>default</logDate>
          <verbose>true</verbose>
          <images>
            <image>
              <alias>jekyll</alias>
              <name>jekyll/jekyll:3.8.3</name>
              <run>
                <namingStrategy>alias</namingStrategy>
                <ports>
                  <port>4000:4000</port>
                </ports>
                <volumes>
                  <bind>
                    <volume>${project.build.directory}/site:/srv/jekyll</volume>
                  </bind>
                </volumes>
                <cmd>jekyll serve</cmd>
                <wait>
                  <http>
                    <url>http://localhost:4000</url>
                    <method>GET</method>
                    <status>200</status>
                  </http>
                  <time>60000</time>
                  <shutdown>500</shutdown>
                </wait>
                <env>
                  <POLLING>true</POLLING>
                </env>
                <log>
                  <enabled>true</enabled>
                  <color>green</color>
                </log>
              </run>
            </image>
          </images>
        </configuration>
        <executions>
          <execution>
            <id>start</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>start</goal>
            </goals>
          </execution>
          <execution>
            <id>stop</id>
            <phase>package</phase>
            <goals>
              <goal>stop</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

