      <resource>
        <directory>${project.basedir}/src/main/site</directory>
        <targetPath>${project.build.directory}/site</targetPath>
        <includes>
          <include>_data/**</include>
          <include>_docs/**</include>
          <include>_posts/**</include>
          <include>_includes/**</include>
          <include>help/**</include>
          <include>projects/**</include>
          <include>index.html</include>
          <include>_config.yml</include>
          <include>latest_version.txt</include>
          <include>archetype-catalog.xml</include>
        </includes>
        <filtering>true</filtering>
